{
  "name": "ngx-photoswipe-app",
  "version": "1.0.6",
  "scripts": {
    "start": "npm run build:lib && ng serve --port 4400",
    "test": "ng test",
    "lint": "ng lint",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --parser typescript --write \"./{src,projects/*/src}/**/*.ts\"",
    "build:lib": "ng build ngx-photoswipe",
    "copy:files": "cp ./README.md ./dist/ngx-photoswipe && cp ./LICENSE ./dist/ngx-photoswipe",
    "npm:pack": "cd dist/ngx-photoswipe && npm pack",
    "npm:publish": "cd dist/ngx-photoswipe && npm publish --access public",
    "package": "npm run build:lib && npm run copy:files && npm run npm:pack && npm run npm:publish"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^10.2.3",
    "@angular/common": "^10.2.3",
    "@angular/compiler": "^10.2.3",
    "@angular/core": "^10.2.3",
    "@angular/forms": "^10.2.3",
    "@angular/platform-browser": "^10.2.3",
    "@angular/platform-browser-dynamic": "^10.2.3",
    "@angular/router": "^10.2.3",
    "core-js": "^3.8.0",
    "photoswipe": "^4.1.3",
    "rxjs": "~6.5.5",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1002.0",
    "@angular-devkit/build-ng-packagr": "^0.1002.0",
    "@angular/cli": "^10.2.0",
    "@angular/compiler-cli": "^10.2.3",
    "@angular/language-service": "^10.2.3",
    "@types/jasmine": "^3.5.14",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "^12.19.8",
    "@types/photoswipe": "^4.1.0",
    "codelyzer": "^5.1.2",
    "husky": "^4.3.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^10.5.2",
    "ng-packagr": "^10.1.0",
    "prettier": "^2.2.1",
    "protractor": "~7.0.0",
    "ts-node": "^8.9.1",
    "tslint": "~6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "~4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix && npm run lint && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run prettier",
      "git add"
    ]
  }
}
